<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link rel="stylesheet" href="setting.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Black+Ops+One&family=Bowlby+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Passion+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="Assets/css/style_setting.css">
    <title>Profile</title>
    <link rel = "icon" href = 
    "https://i.ibb.co/7rWKwZS/1.jpg" 
    type = "image/x-icon">

</head>
<body>
    <nav class="fixed-top sticky-top">
      <%- include('../layouts/navbar.ejs'); %>
    </nav>

    <div class="form"style="padding-top: 10px;" >
        <div class="container">
            <div class="row no-gutters">
                <div class="col-lg-5">
                  <ul class="nav flex-column garis">
                    <li class="nav-item" >
                      <a class="nav-link" href="/profile_setting"><p class="material-icons" style="color: white;font-size: 20pt; padding-top: 15px;  ">account_circle</p>&nbsp &nbsp Edit Profile</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/changepass"><p class="material-icons" style="color: white;font-size: 20pt; padding-top: 15px;  ">lock</p>&nbsp &nbsp Change Password</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="/helpandabout"><p class="material-icons" style="color: white;font-size: 20pt; padding-top: 15px; ">help</p>&nbsp &nbsp Help center</a>
                    </li>       
                    <li class="nav-item">
                      <a class="nav-link" href="/contactus"><p class="material-icons" style="color: white;font-size: 20pt; padding-top: 15px; ">info</p>&nbsp &nbsp Contact Us</a>
                    </li>      
                  </ul>
              </div>
              <% account.forEach(pic => { %>
              <div class="col ">
                <div class="card-body garis" style="text-align: left;">
                    <form action="/profile_settings" method="post" autocomplete="off">
                        <div class="form-group">
                          <div class="profile-picture">
                            <img
                              src="<%= pic.ImagePath %>"
                              alt=""
                            />
                            <h3>
                               <%= pic.name %>
                            </h3>
                          </div>
                        </div>
                        <div class="form-group">
                          <input type="text" id="textColor" placeholder="Name" class="form-control" name="name" >
                        </div>
                        <div class="form-group">
                          <label for="exampleFormControlTextarea1" class="form-label">Bio</label>
                          <input type="text" id="textColor" placeholder="bio" class="form-control" name="bio" >
                        </div>
                        <div class="form-group">
                            <label >E-Mail</label>
                            <input type="email" id="textColor" placeholder="Example@gmail.com" class="form-control" name="email">
                        </div>
                        <div class="form-group">
                            <label >Phone Number</label>
                            <input type="Number" id="textColor" placeholder="123456789" class="form-control" name="number">
                        </div>
                        <div class="mb-3 form-check">
                          <input type="checkbox" class="form-check-input" id="textColor">
                          <label class="form-check-label" for="exampleCheck1" style="color: white;">Are you sure wanna change your password</label>
                        </div>
                        <div>
                          <button name="submit" id="submit" type="submit" class="btn btn-primary ">Save</button>
                        </div>
                        <% if(locals.error) { %>
                          <span class ="text-danger pl-2"><%= error %></span>
                        <% } %>
                    </form>
                </div>
              </div>
              <% }) %>
            </div>
        </div>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns" crossorigin="anonymous"></script>
<script>
  document.getElementById("textColor").style.color='White';
</script>
</body>
</html>